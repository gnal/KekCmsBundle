<td class="column-boolean col-xs-1{% if column.value %} {{ column.options.class_true }}{% else %} {{ column.options.class_false }}{% endif %}" id="td{{ loop.index~row.id }}">

{% if grid.admin.isTranslatable and row.hasTranslation(working_locale) == false %}
    n/a
{% else %}
    {% if column.options.toggleable %}
        <a href="{{ grid.admin.genUrl('toggle', {'id': column.object.id, 'field': column.name}) }}" class="msi_admin_admin_change" data-icon-true="{{ column.options.icon_true }}" data-icon-false="{{ column.options.icon_false }}" data-class-true="{{ column.options.class_true }}" data-class-false="{{ column.options.class_false }}">
    {% else %}
        <span class="label label-{% if column.value %}success{% else %}default{% endif %}">
    {% endif %}
        {% if column.value %}
            <i class="{{ column.options.icon_true }} fa fa-lg"></i>
        {% else %}
            <i class="{{ column.options.icon_false }} fa fa-lg"></i>
        {% endif %}
    {% if column.options.toggleable %}
        </a>
    {% else %}
        </span>
    {% endif %}
{% endif %}

</td>
