{% form_theme form 'MsiAdminBundle:Form:form.html.twig' %}

<ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">{{ 'Content'|trans }}</a></li>
    <li><a href="#tab4" data-toggle="tab">{{ 'Settings'|trans }}</a></li>
    {% if app.user.isSuperAdmin %}
        <li><a href="#tab3" data-toggle="tab">{{ 'ACL'|trans }}</a></li>
    {% endif %}
</ul>

{{ form_errors(form) }}
<div class="tab-content">
    <div class="tab-pane fade active in" id="tab1">
        {% for translation in form.translations %}
            {{ form_row(translation.name) }}
        {% endfor %}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.page) }}
            </div>
            <div class="col-md-6">
                {% for translation in form.translations %}
                    {{ form_row(translation.route) }}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab4">
        {% for translation in form.translations %}
            {{ form_row(translation.published) }}
        {% endfor %}
        {{ form_row(form.targetBlank) }}
        {{ form_row(form.parent) }}
        {{ form_row(form.attr) }}
    </div>

    {% if app.user.isSuperAdmin %}
        <div class="tab-pane fade" id="tab3">
            {{ form_row(form.operators) }}
        </div>
    {% endif %}
</div>
{{ form_rest(form) }}
