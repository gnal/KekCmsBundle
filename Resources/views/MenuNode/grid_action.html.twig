{% extends 'MsiAdminBundle:Admin:grid_action.html.twig' %}

{% block actions %}
{% if admin.isGranted('update') %}
<form class="form-inline" method="post" action="{{ admin.generateUrl('moveup', {'id': entity.id}) }}" style="display: inline-block;">
    <input type="text" class="form-control form-control-sm" style="width: 5em;" name="number">
    <button type="submit" class="btn btn-default"><i class="fa fa-arrow-up"></i></button>
</form>
<form class="form-inline" method="post" action="{{ admin.generateUrl('movedown', {'id': entity.id}) }}" style="display: inline-block;">
    <input type="text" class="form-control form-control-sm" style="width: 5em;" name="number">
    <button type="submit" class="btn btn-default"><i class="fa fa-arrow-down"></i></button>
</form>
{% endif %}
{{ parent() }}
{% endblock %}
