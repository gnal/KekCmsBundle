{% if admin.hasTrait('translatable') %}
    {% for locale in ['fr', 'en'] %}
        <a class="btn btn-primary btn-sm" href="{{ admin.generateUrl('edit', {'id': row.id, 'lang': locale}) }}">Edit {{ locale|upper }}</a>
    {% endfor %}
{% else %}
    <a class="btn btn-primary btn-sm" href="{{ admin.generateUrl('edit', {'id': row.id}) }}">Edit</a>
{% endif %}
{% endif %}

{% if admin.isGranted('delete') %}
<a class="btn btn-danger btn-sm confirmable" href="{{ admin.generateUrl('delete', {'id': row.id}) }}">Delete</a>
{% endif %}
