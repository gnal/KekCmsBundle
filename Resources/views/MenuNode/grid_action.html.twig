{% if admin.isGranted('update') %}
<form class="form-inline" method="post" action="{{ admin.generateUrl('moveup', {'id': row.id}) }}" style="display: inline-block;">
    <input type="text" class="form-control form-control-sm" style="width: 5em;" name="number">
    <button type="submit" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-up"></i></button>
</form>
<form class="form-inline" method="post" action="{{ admin.generateUrl('movedown', {'id': row.id}) }}" style="display: inline-block;">
    <input type="text" class="form-control form-control-sm" style="width: 5em;" name="number">
    <button type="submit" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-down"></i></button>
</form>


