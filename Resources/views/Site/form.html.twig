{% form_theme form 'MsiAdminBundle:Form:form.html.twig' %}

<ul class="nav nav-tabs ">
    <li class="active"><a href="#tab1" data-toggle="tab">{{ 'General'|trans }}</a></li>
    <li><a href="#tab2" data-toggle="tab">{{ 'Settings'|trans }}</a></li>
    <li><a href="#tab3" data-toggle="tab">{{ 'SEO'|trans }}</a></li>
    <li><a href="#tab4" data-toggle="tab">{{ 'Admin'|trans }}</a></li>
</ul>

{{ form_errors(form) }}
<div class="tab-content">
    <div class="tab-pane fade active in" id="tab1">
        {% for translation in form.translations %}
            {{ form_row(translation.brand) }}
        {% endfor %}
        {{ form_row(form.host) }}
    </div>

    <div class="tab-pane fade" id="tab2">
        {{ form_row(form.isDefault) }}
        {{ form_row(form.theme) }}
    </div>

    <div class="tab-pane fade" id="tab3">
        {% for translation in form.translations %}
            {{ form_row(translation.metaDescription) }}
        {% endfor %}
    </div>

    <div class="tab-pane fade" id="tab4">
        {{ form_row(form.css) }}
        {{ form_row(form.js) }}
    </div>
</div>

{{ form_rest(form) }}
